/* pages/my/my.wxss */
.my-head{
	width:100%;
	height:200rpx;
	display:flex;
	justify-content: flex-start;
	background-color:#FCD15E;
}
.my-head>view:first-child{
	background-color:#fff;
	width:150rpx;height:150rpx;
	border-radius:50%;
	margin:10rpx 30rpx 0;
	overflow:hidden;
}
.my-head>view:first-child>image{
	width:150rpx;height:150rpx;
	overflow:hidden;
}
.my-head>view:last-child{
	height:150rpx;margin-top:10rpx;
	display:flex;flex-direction:column;
	justify-content:center;
}
.my-head>view:last-child>view:first-child{
	font-size:50rpx;
	font-weight:600;
}